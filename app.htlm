    <script>
        let cart = [];
        let total = 0;

        function toggleCart() {
            const sidebar = document.getElementById('cart-sidebar');
            sidebar.classList.toggle('translate-x-full');
        }

        function addToCart(name, price) {
            cart.push({ name, price });
            updateCartUI();
            
            // Animation sur le panier
            const btn = document.querySelector('.fixed.bottom-6');
            btn.classList.add('scale-125', 'bg-emerald-500');
            setTimeout(() => btn.classList.remove('scale-125', 'bg-emerald-500'), 300);
        }

        function removeFromCart(index) {
            cart.splice(index, 1);
            updateCartUI();
        }

        function updateCartUI() {
            const cartItems = document.getElementById('cart-items');
            const cartCount = document.getElementById('cart-count');
            const cartTotal = document.getElementById('cart-total');
            
            cartItems.innerHTML = '';
            total = 0;

            if (cart.length === 0) {
                cartItems.innerHTML = '<p class="text-gray-500 text-center italic mt-10">Votre panier est encore vide...</p>';
                cartCount.classList.add('hidden');
            } else {
                cartCount.classList.remove('hidden');
                cartCount.innerText = cart.length;
                
                cart.forEach((item, index) => {
                    total += item.price;
                    cartItems.innerHTML += `
                        <div class="flex justify-between items-center bg-slate-800/80 p-4 rounded-xl border border-white/5 animate-slide-in">
                            <div>
                                <p class="font-bold text-sm">${item.name}</p>
                                <p class="text-xs text-sky-400 font-bold">${item.price} FCFA</p>
                            </div>
                            <button onclick="removeFromCart(${index})" class="text-red-400 hover:text-red-200 text-xl font-bold p-2">&times;</button>
                        </div>
                    `;
                });
            }
            cartTotal.innerText = total.toLocaleString('fr-FR') + ' FCFA';
        }

        function sendWhatsApp() {
            if (cart.length === 0) {
                alert("Votre panier est vide ! Veuillez choisir un service.");
                return;
            }
            
            let message = "*COMMANDE ALFRED SERVICE*\n";
            message += "---------------------------\n";
            cart.forEach((item, index) => {
                message += `âœ… ${item.name} : ${item.price} FCFA\n`;
            });
            message += "---------------------------\n";
            message += `ðŸ’° *TOTAL Ã€ PAYER : ${total} FCFA*`;
            
            const encodedMessage = encodeURIComponent(message);
            const phoneNumber = "22665397842";
            window.open(`https://wa.me/${phoneNumber}?text=${encodedMessage}`, '_blank');
        }
